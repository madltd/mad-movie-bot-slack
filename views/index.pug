doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(name="slack-app-id" content="ABUCW5JR1")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    title Mad Movie Bot
    link(href="https://fonts.googleapis.com/css?family=Fira+Sans:100,200,300,400,500,600,700,800,900" rel="stylesheet")
    style.
      html,
      body {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family: 'Fira Sans', sans-serif;
        overflow: hidden;
        color: #fafafa;
      }
      .wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
        background: #232526;
        background: -webkit-linear-gradient(to right, #414345, #232526);
        background: linear-gradient(to right, #414345, #232526);
      }
      .cta-main-container {
        text-align: center;
      }
      .cta-main-container h1 {
        margin-bottom: 1em;
        letter-spacing: 2px;
        font-weight: 700;
      }
      .cta-main-container p {
        font-weight: 200;
        letter-spacing: 1px;
        margin-bottom: 2em;
      }
      footer.footer {
        position: fixed;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 3em;
        left: 0;
        bottom: 0;
      }
      footer.footer p {
        text-align: center;
        opacity: 0.5;
        font-weight: 100;
        letter-spacing: 1px;
        font-size: 0.85em;
      }
  body
    .wrapper
      .cta-main-container
        h1 Install Mad Movie Bot for Slack
        p Click the button to authorise the app to you Slack space
        a(href="https://slack.com/oauth/authorize?client_id=179522282535.402438188851&scope=incoming-webhook,commands,chat:write:user,team:read,chat:write:bot")
          img(alt="Add to Slack" height="40" width="139" src="https://platform.slack-edge.com/img/add_to_slack.png" srcset="https://platform.slack-edge.com/img/add_to_slack.png 1x, https://platform.slack-edge.com/img/add_to_slack@2x.png 2x")
    footer.footer
      p &copy; MadLtd. 2018 | v 1.2.0-alpha.0
